<div class="mt-4">
    <h3 class="">
        Sửa khóa học {{course._id}}
    </h3>
    <div class="mt-4">
        <form method="POST" action="/course/{{course._id}}?_method=PUT">
            <div class="form-group">
                <label for="name">tên khóa học</label>
                <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
            </div>
            <div class="form-group">
                <label for="description">mô tả</label>
                <textarea class="form-control video-youtobe" id="description"
                    name="description">{{course.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="videoID">Id video</label>
                <input type="text" class="form-control" id="videoID" name="videoID" value="{{course.videoID}}">
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>
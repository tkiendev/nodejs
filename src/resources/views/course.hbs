<div class="mt-4" id="">
    <div class="row" id="">
        <!-- lặp các mặt hàng -->
        {{#each Courses}}
        <div class="col-sm-5 col-lg-3">
            <div class="card card-course-item">
                <div class="car-img-border-color" id="">
                    <a href="/course/{{this.slug}}" class="" id="">
                        <img class="card-img-top" src="{{this.img}}" alt="Card image cap">
                    </a>
                </div>
                <div class="card-body">
                    <a href="/course/{{this.slug}}" class="" id="">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua Hàng</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
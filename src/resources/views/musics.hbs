<div class="mt-4" id="">
    <div class="row" id="">
        <!-- lặp các bài nhạc -->
        {{#each musics}}
        <div class="col-sm-5 col-lg-3">
            <div class="card card-course-item">
                <div class="car-img-border-color" id="">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a href="/music/{{this.slug}}" class=" btn btn-primary">Play</a>
                    <a data-id="{{this._id}}" class="btn btn-danger" data-toggle="modal"
                        data-target="#exampleModal-delete">Xóa</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="">
        <h1 class="heading" id="">Thêm bài hát</h1>
        <form method="POST" action="music/musicAdd">
            <div class="form-group">
                <label for="name">tên bài hát</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="name">videoId</label>
                <input type="text" class="form-control" id="name" name="videoId">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

{{!-- xóa --}}
<div class="modal fade" id="exampleModal-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>ấn xác nhận để xóa</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete-music" type="button" class="btn btn-primary">Xác nhân</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Quay
                    lại</button>
            </div>
        </div>
    </div>
</div>

<form method="POST" name="delete-form"></form>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        var musicId;
        var deleteForm = document.forms['delete-form'];
        var btnDelete = document.getElementById('btn-delete-music');

        $('#exampleModal-delete').on('show.bs.modal', (event) => {
            let button = $(event.relatedTarget);
            musicId = button.data('id');
        });
        btnDelete.onclick = () => {
            deleteForm.action = `/music/${musicId}/?_method=DELETE`;
            deleteForm.submit();
        }
    });
</script>